@model ToDo.Models.Item

@{
    ViewData["Title"] = "Create";
    List list = (List) ViewData["List"];
}

<form asp-controller="ListItems" asp-action="Create" asp-route-listId="@list.Id" method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add To-Do Item in List @Html.DisplayFor(model => list.Name)</h2>
        </div>

        <partial name="_Form.cshtml" model="Model" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

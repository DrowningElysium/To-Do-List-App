@model IEnumerable<ToDo.Models.List>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">To-Do Lists</h2>
        </div>
        <div class="col-6">
            <div class="float-right">
                <a asp-controller="Lists" asp-action="Create" class="btn btn-primary">Create New List</a>
            </div>
        </div>
    </div>

   @if (Model.Count() > 0)
    {
        <div class="row">
           @foreach (List list in Model)
            {
                <div class="col-12 mt-3">
                    <partial name="_View.cshtml" model="list" />
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <span>There are no lists yet, please add your first one!</span>
            </div>
        </div>
    }
</div>
